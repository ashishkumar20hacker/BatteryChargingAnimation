<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/backbt" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/circular_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:paddingStart="@dimen/_25sdp"
        android:paddingTop="@dimen/_25sdp"
        android:text="Main"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selected_nav"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/battery_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:drawableStart="@drawable/batter_nav"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="@string/battery"
            android:textColor="@color/dark_cyan"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selected_nav"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/animation_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:drawableStart="@drawable/batterycharging"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="@string/battery_animation"
            android:textColor="@color/dark_cyan"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selected_nav"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/downloads_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:drawableStart="@drawable/download_nav"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="Downloads"
            android:textColor="@color/dark_cyan"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selected_nav"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/fav_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:drawableStart="@drawable/favourites_nav"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="Favorites"
            android:textColor="@color/dark_cyan"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:paddingStart="@dimen/_25sdp"
        android:paddingTop="@dimen/_8sdp"
        android:text="Settings"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selected_nav"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pp_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:drawableStart="@drawable/pp_nav"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="Privacy Policy"
            android:textColor="#9CFFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selected_nav"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tu_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:drawableStart="@drawable/tu_nav"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="Terms of Use"
            android:textColor="#9CFFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>